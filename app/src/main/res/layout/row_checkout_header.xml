<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_below="@id/belanjaantitle"
    android:orientation="vertical"
    android:id="@+id/checkout1"
    android:layout_marginTop="8dp"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/itemcheckout_icon"
            android:layout_alignParentLeft="true"
            android:layout_margin="5sp"
            android:layout_width="32dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_height="32dp"
            android:src="@drawable/shop"
            android:buttonTint="@color/ColorPrimary"
            />
        <TextView
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:id="@+id/itemcart_sellername"
            android:layout_toRightOf="@id/itemcart_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nama_penjual"/>
    </LinearLayout>

    <View
        android:id="@+id/checkout2"
        android:layout_below="@id/checkout1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#9f9f9f"></View>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/checkout2"
        android:layout_width="match_parent"
        android:id="@+id/checked_subitems"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/linear_expedition"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40sp">
        <TextView
            android:layout_width="0sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="textStart"
            android:paddingLeft="10sp"
            android:layout_weight="1"
            android:text="Pengiriman"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:id="@+id/checkout_expedition"
            android:paddingRight="10sp"
            android:gravity="center"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:text="Pilih Pengiriman"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="10sp"
            android:src="@drawable/arrow"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40sp">
        <TextView
            android:layout_width="0sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="textStart"
            android:paddingLeft="10sp"
            android:layout_weight="0.3"
            android:text="Pesan : "
            android:layout_height="match_parent" />
        <EditText
            android:layout_width="0sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:paddingRight="10sp"
            android:gravity="center"
            android:textAlignment="textEnd"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_weight="1"
            android:textSize="7pt"
            android:background="@android:color/transparent"
            android:hint="Sihlakan TIngalkan Pesan..."
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40sp">
        <TextView
            android:layout_width="0sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="textStart"
            android:paddingLeft="10sp"
            android:layout_weight="0.9"
            android:text="Total Pesanan ( produk) : "
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0sp"
            android:id="@+id/total_seller"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center"
            android:paddingRight="10sp"
            android:gravity="center"
            android:textAlignment="textEnd"
            android:singleLine="true"
            android:maxLines="1"
            android:text=""
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="8pt"
            android:background="@android:color/transparent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>