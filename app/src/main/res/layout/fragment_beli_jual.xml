<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">

    <Button
        android:id="@+id/buttonjual"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/background_light"
        android:backgroundTint="@android:color/background_light"
        android:drawableLeft="@android:drawable/ic_input_add"
        android:drawableRight="@drawable/arrow"
        android:elevation="0dp"
        android:text="Tambah Produk Baru"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        tools:text="    Tambah Produk Baru" />
    <TextView
        android:layout_below="@id/buttonjual"
        android:text="Daftar Produk Anda"
        android:layout_marginTop="10sp"
        android:id="@+id/xtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10sp"
        android:id="@+id/listmysolditem"
        android:background="@color/WhiteColor"
        android:layout_below="@id/xtview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


</RelativeLayout>
